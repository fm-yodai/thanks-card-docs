{
  "name": "thanks-card-docs-mcp",
  "version": "1.0.0",
  "description": "MCP server for thanks-card project documentation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "thanks-card-docs-mcp": "dist/index.js"
  },
  "scripts": {
    "prepublishOnly": "npm run copy-docs && npm run build",
    "copy-docs": "node -e \"const fs=require('fs');fs.cpSync('../ai-context','./ai-context',{recursive:true})\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "node dist/index.js --http",
    "dev": "tsc --watch"
  },
  "files": [
    "dist",
    "ai-context"
  ],
  "keywords": [
    "mcp",
    "documentation"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.1",
    "gray-matter": "^4.0.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "typescript": "^5.9.3"
  }
}
